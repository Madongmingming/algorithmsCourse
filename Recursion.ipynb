   "source": [
    "#live coded lesson on recursion\n",
    "#keep the base case in mind when writing recursive functions"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "metadata": {
    "collapsed": true
   },
   "outputs": [],
   "source": [
    "def fact(n):\n",
    "    #base case\n",
    "    if n == 0:\n",
    "        return 1\n",
    "    #recursive case\n",
    "    else:\n",
    "        return n * fact(n-1)\n",
    "    \n"
   ]
  },
